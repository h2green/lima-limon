---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Lima limon - Contact">
    <Header />
    <main>
        <h1>Estamos en</h1>
        <a
            href="https://www.google.com/maps/place/Lima+Lim%C3%B3n/@-34.7134193,-58.3887071,55m/data=!3m1!1e3!4m6!3m5!1s0x95bccd3bf9c576e3:0x879074c03377e266!8m2!3d-34.7134673!4d-58.3885997!16s%2Fg%2F11ddwwzd61?entry=ttu"
            >Salta & Ramón Cabrera, Provincia de Buenos Aires</a
        >
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d240.81584459570178!2d-58.38870708175164!3d-34.713419252422!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bccd3bf9c576e3%3A0x879074c03377e266!2sLima%20Lim%C3%B3n!5e1!3m2!1ses-419!2sar!4v1712160232974!5m2!1ses-419!2sar"
            width="600"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>

        <h3>Horario de atención:</h3>
        <p>Lunes a Viernes de 09:00 a 12:00 y de 14:00 a 20:00</p>
        <p>Sábados y domingo de 09:00 a 12:00</p>
    </main>
</Layout>

<style>
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 30px 0;

        & h1 {
            margin: 5px 0;
            font-size: 24px;
        }

        & a {
            margin: 5px 0;
            font-size: 30px;
            color: black;
        }

        & iframe {
            border-radius: 3px;
            box-shadow: 2px 2px 12px #0000008f;
        }

        & h3,
        p {
            margin: 5px 0;
        }
    }
</style>
